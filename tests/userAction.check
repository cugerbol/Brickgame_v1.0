# suite userAction

# test userAction_test_KEY_UP
TetGame_t * game = initGame();
game->figure->y = 0;
game->figure->x = 0;
int ch = KEY_UP;
userAction(game,ch);
ck_assert_int_eq(game->action , Up);
freeGame(game);


